<div class="content-wrapper">
    <%- include('messages') -%>
</div>

<div class="row">
    <!-- Post Content Column -->
    <div class="col-lg-8">

        <!-- Title -->
        <h1 class="mt-4"><%- post.title %></h1>

        <!-- Author -->
        <p class="lead">
            by
            <a href="#"><%- post.user.firstName %> <%- post.user.lastName %></a>
        </p>

        <hr>

        <!-- Date/Time -->
        <p>Posted on <%- post.creationDate %></p>

        <hr>

        <!-- Preview Image -->
        <img class="img-fluid rounded" src="<%- post.file %>" alt="">

        <hr>
        <!-- Post Content -->
        <div class="lead"><%- post.description %></div>
        <br>
        <div class="lead"><%- post.description_more %></div>

        <hr>

        <!-- Comments Form -->
        <div class="card my-4">
            <h5 class="card-header">Leave a Comment:</h5>
            <div class="card-body">
                <form action="/post/<%- post._id %>" method="post">
                    <div class="form-group">
                        <label for="comment_body" class="w-100">
                            <textarea class="form-control" rows="3" name="comment_body"></textarea>
                        </label>
                        <input type="hidden" name="id" value="<%- post._id %>">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>

        <!-- Single Comment -->
        <% post.comments.forEach(function(comment) { %>
            <% if(comment.commentIsApproved) { %>
                <div class="media mb-4">
                    <img class="d-flex mr-3 rounded-circle" src="https://via.placeholder.com/50" alt="">
                    <div class="media-body">
                        <h5 class="mt-0"><%- comment.user.firstName %> <%- comment.user.lastName %></h5>
                        <%- comment.body %>
                    </div>
                </div>
            <% } %>
        <% }); %>
    </div>

    <!-- Sidebar Widgets Column -->
    <div class="col-md-4">

        <!-- Search Widget -->
        <div class="card my-4">
            <h5 class="card-header">Search</h5>
            <div class="card-body">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                  <button class="btn btn-secondary" type="button">Go!</button>
                </span>
                </div>
            </div>
        </div>

        <!-- Categories Widget -->
        <div class="card my-4">
            <h5 class="card-header">Categories</h5>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled mb-0">
            <% categories.forEach(function(category) { %>
                                <li>
                                    <a href="/result/<%- category._id %>"><%- category.title %></a>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Side Widget -->
        <div class="card my-4">
            <h5 class="card-header">Side Widget</h5>
            <div class="card-body">
                You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
            </div>
        </div>
    </div>
</div>