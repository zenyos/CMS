<%- include('../admin-header') -%>
<body class="fixed-nav sticky-footer bg-dark" id="page-top">
<!-- Navigation -->
<%- include('../admin-topNav') -%>
    <div class="content-wrapper">
        <%- include('../messages') -%>
        <div class="container">
            <div class="alert alert-secondary text-center">
                <h1>Users List</h1>
            </div>

            <table class="table table-bordered">
                <thead class="bg-dark text-center">
                <tr class="text-white">
                    <th>ID</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Email</th>
                    <th>Level</th>
                    <td>Actions</td>
                </tr>
                </thead>
                <tbody class="text-center">

                <% users.forEach(function(user) { %>
                    <tr>
                        <td><%- user._id %></td>
                        <td><%- user.firstName %></td>
                        <td><%- user.lastName %></td>
                        <td><%- user.email %></td>
                        <td><% if(user.level === 0) {%>user<% } %><% if(user.level === 1) {%>admin<% } %><% if(user.level === 2) {%>moderator<% } %><% if(user.level === 3) {%>owner<% } %></td>
                        <td class="d-flex">
                            <a href="/admin/users/edit/<%- user._id %>" class="btn btn-sm btn-warning mr-2">Edit User</a>
                        </td>
                    </tr>
                <% }); %>

                </tbody>
            </table>

        </div>
        <!-- /.container-fluid -->
        <!-- /.content-wrapper-->
        <%- include('../admin-footer') -%>
    </div>
</body>

</html>