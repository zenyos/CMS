<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="it's simple blog system api to share your content as post on your blog.">
    <meta name="author" content="Diariesvexar">

    <link rel="shortcut icon" type="image/x-icon" href="/images/favicon.ico">

    <title>Installation Steps</title>

    <!-- Bootstrap core CSS -->
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/css/blog-home.css" rel="stylesheet">

    <!-- Own styles for this template -->
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
    <div class="content-wrapper">
        <%- include('../messages') -%>
        <div class="row">
            <div class="container light-style flex-grow-1 container-p-y">
                <h4 class="font-weight-bold py-3 mb-4">
                    Installation
                </h4>
                <form action="/installation" method="post" enctype="multipart/form-data">
                    <div class="card overflow-hidden">
                        <div class="row no-gutters row-bordered row-border-light">

                            <div class="col-md-9">
                                <div class="tab-content">
                                    <div class="tab-pane fade active show" id="setting-general">
                                        <hr class="border-light m-0">
                                        <div class="card-body">
                                            <div class="form-group">
                                                <label for="website_name" class="form-label text-dark">Website name</label>
                                                <input type="text" id="website_name" name="website_name" class="form-control mb-1" value="" required>
                                            </div>
                                            <div class="form-group">
                                                <label for="copyright_text" class="form-label text-dark">Copyright footer text</label>

                                                <input type="text" id="copyright_text" name="copyright_text" class="form-control mb-1" value="" required>
                                            </div>
                                            <div class="form-group">
                                                <label for="website_language" class="form-label">Language</label>
                                                <select name="website_language" id="website_language" class="custom-select" required>
                                                    <option lang="english" value="en">English</option>
                                                    <option lang="farsi" value="fa">فارسی</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-right mt-3">
                        <button name="install-cms-button" id="install-cms-button" class="btn btn-primary">Install CMS</button>&nbsp;
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

<!-- Bootstrap core JavaScript -->
<script src="/vendor/jquery/jquery.min.js"></script>
<script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script>
    $(document).ready(function () {
        setTimeout(function () {
            $('.auto-hide').slideUp(300);
        }, 2000);
    });
    $("#install-cms-button").on('click', function (e) {
        e.preventDefault();
        let website_name = $("#website_name").val();
        let copyright_text = $("#copyright_text").val();
        let website_language = $("#website_language").val();
        $.ajax({
            url: `/installation`,
            type: 'POST',
            data: {
                website_name: website_name,
                copyright_text: copyright_text,
                website_language: website_language,
            },
            success: function (response) {
                window.location.href = '/';
            }
        });
    });
</script>

</html>